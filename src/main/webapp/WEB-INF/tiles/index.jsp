<script>
var home,
HomeWidget = {
  settings: {
    num: 3,
    arr: [],
    cryptoLookUp: $("#cryptoLookUp")
  },

  init: function() {
    home = this.settings;
    this.bindUIActions();
  },

  bindUIActions: function() {
    HomeWidget.getAutoCompleteData();
    home.cryptoLookUp.autocomplete({
      source: function(request, response) {
        var results = $.ui.autocomplete.filter(home.arr, request.term);
        response(results.slice(0, home.num));
      }
    });
  },
  getAutoCompleteData: function() {
    $.getJSON("http://localhost:8080/", function(data) {
      $.map(data, function(key, value) {
        home.arr.push(key + ',' + value);
      });
    });
  },
};
(function() {
  HomeWidget.init();
})();

</script>
